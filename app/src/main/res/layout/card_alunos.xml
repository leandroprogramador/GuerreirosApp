<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/aluno_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/aluno_nome"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:text="Leandro Araujo dos Santos"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/aluno_img"
            android:layout_toEndOf="@+id/aluno_img" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/aluno_modalidade"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:text="Jiu Jitsu"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/aluno_nome"
            android:layout_toEndOf="@+id/aluno_img" />

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@+id/aluno_img"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:tint="@color/colorPrimaryDark"
            android:layout_below="@id/aluno_modalidade"
            android:src="@drawable/ic_phone_white_24dp"
            />

        <ImageView
            android:id="@+id/img_mail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:tint="@color/colorPrimaryDark"
            android:layout_below="@id/aluno_modalidade"
            android:layout_toRightOf="@id/img_call"
            android:src="@drawable/ic_email_white_24dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>