<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_faixa"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/amarelo"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_faixa"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/txt_faixa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faixa Laranja"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_faixa"
                android:text="Data: 16/08/2017"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>